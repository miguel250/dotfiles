#!/usr/bin/env bash
set -ex

source  ~/.localzshrc
eval "$($DOTFILEDIR/bin/dotfile-env)"

curl https://sh.rustup.rs -sSf | sh -s --  -y --no-modify-path

mkdir -p ~/.zfunc
~/.cargo/bin/rustup update
~/.cargo/bin/rustup completions zsh > ~/.zfunc/_rustup

~/.cargo/bin/rustup override set $RUST_VERSION
